@model Actor

@{ 
    ViewData["Title"] = "Schimbă detaliile actorului";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Schimbă detaliile actor!</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Editeaza">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 190px" id="PozaProfilPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PozaProfilURL" class="control-label"></label>
                        <input asp-for="PozaProfilURL" class="form-control" />
                        <span asp-validation-for="PozaProfilURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeIntreg" class="control-label"></label>
                        <input asp-for="NumeIntreg" class="form-control" />
                        <span asp-validation-for="NumeIntreg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Editeaza" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Arată Tot</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@*Cod JavaScript*@

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('PozaProfilPreview');
            output.src = $("#PozaProfilURL").val();
        })

        $("#PozaProfilURL").on("change", function () {
            var output = document.getElementById('PozaProfilPreview');
            output.src = $(this).val();
        })
    </script>
}