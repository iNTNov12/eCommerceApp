@model Actor

@{
    ViewData["Title"] = "Editează Actorul";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalii pentru @Model.NumeIntreg</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 190px" id="PozaProfilPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PozaProfilURL" class="control-label"></label>
                        <input asp-for="PozaProfilURL" class="form-control" readonly />
                        <span asp-validation-for="PozaProfilURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeIntreg" class="control-label"></label>
                        <input asp-for="NumeIntreg" class="form-control" readonly />
                        <span asp-validation-for="NumeIntreg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Editeaza" asp-route-id="@Model.Id_Actor" >Editează</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Arată Tot</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@*Cod JavaScript*@

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('PozaProfilPreview');
            output.src = $("#PozaProfilURL").val();
        })
    </script>
}