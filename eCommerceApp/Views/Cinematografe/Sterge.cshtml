@model Cinema

@{
    ViewData["Title"] = "Sterge Cinematograful";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Confirma stergerea cinematografului @Model.Nume</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 190px" id="CinemaLogoPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nume" class="control-label"></label>
                    <input asp-for="Nume" class="form-control" readonly />
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descriere" class="control-label"></label>
                    <input asp-for="Descriere" class="form-control" readonly />
                    <span asp-validation-for="Descriere" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Sterge">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmă" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Arată Tot</a>
                </div>
            </div>
        </div>
    </div>
</div>

@*Cod JavaScript*@

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}