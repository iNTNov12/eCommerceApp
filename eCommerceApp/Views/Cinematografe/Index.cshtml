@*Definim modelul*@
@model IEnumerable<Cinema>
@*Definim ViewData*@
@{
    ViewData["Title"] = "Lista de Cinematografe";
}

@*Scriem codul*@

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo) </th>
                    <th>@Html.DisplayNameFor(model => model.Nume) </th>
                    <th>@Html.DisplayNameFor(model => model.Descriere) </th>
                    <th>Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) //Model este IEnumerable<Actor>
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Nume" style="max-width: 140px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nume)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Descriere)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Editeaza" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editează </a>
                            <a class="btn btn-outline-info" asp-action="Detalii" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Detalii </a>
                            <a class="btn btn-danger text-white" asp-action="Sterge" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Șterge </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-action="Creeaza" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Adaugă
    </a>
</div>